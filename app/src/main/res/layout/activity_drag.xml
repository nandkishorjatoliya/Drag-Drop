<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DragActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/ivVertical"
            android:layout_width="80dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:background="@color/colorRed"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/ivHorizonal"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@color/colorRed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/line_horizontal_large"
                        android:layout_width="50dp"
                        android:layout_height="6dp"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_line_horizontal_large" />

                    <ImageView
                        android:id="@+id/line_horizontal_medium"
                        android:layout_width="40dp"
                        android:layout_height="6dp"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_line_horizontal_medium" />


                    <ImageView
                        android:id="@+id/line_horizontal_small"
                        android:layout_width="30dp"
                        android:layout_height="6dp"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_line_horizontal_small" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/top_right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:layout_toRightOf="@id/top_left"
                        android:src="@drawable/ic_top_right" />

                    <ImageView
                        android:id="@+id/bottom_right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/top_right"
                        android:layout_margin="2dp"
                        android:layout_toEndOf="@id/top_left"
                        android:src="@drawable/ic_bottom_right" />

                    <ImageView
                        android:id="@+id/bottom_left"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/top_left"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/ic_bottom_left" />

                    <ImageView
                        android:id="@+id/top_left"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_top_left" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/line_vertical_large"
                        android:layout_width="6dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_line_vertical_large" />


                    <ImageView
                        android:id="@+id/line_vertical_medium"
                        android:layout_width="6dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_line_vertical_medium" />


                    <ImageView
                        android:id="@+id/line_vertical_small"
                        android:layout_width="6dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_line_vertical_small" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flMainDragContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

    </FrameLayout>


</LinearLayout>